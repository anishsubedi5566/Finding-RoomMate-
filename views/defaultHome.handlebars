{{#if errors}}
  <h2>{{errors}}</h2>
{{/if}}

<div class="grid-container">
  {{#each allpost}}
    {{!-- {{#if this.field === "room"}} --}}
    {{#ifEqual this.field "room"}}

      <div class="grid-item">

        <p>Posted By :{{this.user}}</p>

        <div class="cssroom-div">

          <h1>{{this.title}} </h1>
          <label>Post Date:{{this.postDate}}</label>
          <label>City: {{this.city}} </label>
          <label>State:{{this.state}}</label>
          <label>School Name: {{this.schoolName}}</label>
          <label>Parking Available:{{this.parkingAvailable}}</label>
          <label>Pets Allowed: {{this.petsAllowed}} </label>
          <label>Sharing allowed: {{this.sharingAllowed}}</label>
          <label>Budget:$ {{this.budget}}</label>
          <label>Is a student?: {{this.student}}</label>
          <label>Other description: {{this.otherdescription}}</label>
          <br />
        </div>

      </div>

    {{else}}
      <div class="grid-item">

        <p>Posted By :{{this.user}}</p>
        <div class="cssroom-div">
          <h1>{{this.title}} </h1>
          <div class="images">
            <div class="photo">
              {{#each postImages}}
                <img src={{this}} alt="place" />
              {{/each}}
            </div>
          </div>
          <label>Post Date:{{this.postDate}}</label>
          <label>Street: {{this.street}}</label>
          <label>City: {{this.city}} </label>
          <label>State:{{this.state}}</label>
          <label>Number of Rooms:{{roomNumber}}</label>
          <label>Room Area: {{roomarea}} sqft</label>
          <label>Parking Available:{{this.parkingAvailable}}</label>
          <label>Pets Allowed: {{this.petsAllowed}} </label>
          <label>Sharing allowed: {{this.sharingAllowed}}</label>
          <label>Rent:$ {{this.rent}}</label>
          <p>People Living Currently: {{this.peoplelivingcurrently}}</p>
          <label>Other Description: {{this.otherdescription}}</label>
          <br />
        </div>

      </div>
    {{/ifEqual}}

  {{/each}}
</div>