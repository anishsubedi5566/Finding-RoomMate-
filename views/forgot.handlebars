<div class="forgotPassCont">
  <h1>Forgot Password</h1>

  <form
    action="/forgot"
    id="forgot-form"
    method="POST"
    onsubmit="validateForgotPassInputs(event);"
  >
    <div class="form">

      <label for="username">Username</label>
      <input
        id="username"
        name="username"
        type="text"
        placeholder="Enter username"
        spellcheck="false"
        required
      />
      <br />

      <label for="securityQues">Security Question</label>

      <select id="securityQues" name="securityQues" required>
        <option value="">None</option>
        <option value="What is your nickname?">What is your nickname?</option>
        <option value="Which is your favourite place to spend vacation?">Which
          is your favourite place to spend vacation?</option>
        <option value="Who is your first childhood friend?">Who is your first
          childhood friend?</option>
        <option value="Which is your favourite video game?">Which is your
          favourite video game?</option>

      </select>
      <br />
      <label for="securityAns">Answer</label>

      <input
        id="securityAns"
        name="securityAns"
        type="text"
        placeholder="Answer to the security question"
        spellcheck="false"
        required
      />
      <br />

      <label for="password">Password</label>
      <input
        id="password"
        name="password"
        type="password"
        placeholder="Password"
      />
      <br />
      <br />

      <button type="submit" class="btn btn-primary">Update Password</button>

    </div>
  </form>

  {{#if error}}
    <h2>{{error}}</h2>
  {{/if}}

</div>

<script src="/public/js/forgotPass.js"></script>