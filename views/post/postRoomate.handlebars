<form
  action="/private/postRoomate"
  id="post-form"
  method="POST"
  enctype="multipart/form-data"
  onsubmit="validatepostRoomate(event)"
>
  <div class="postform">

    <div class="postform--group">
      <h1>Find a Roommate</h1>
      <br />

      <label for="title">Title</label>
      <input
        name="title"
        id="title"
        type="text"
        placeholder="Enter Title"
        required
      />
      <br />
      <label for="street">Street</label>
      <input
        name="street"
        id="street"
        type="text"
        placeholder="Enter Street"
        required
      />
      <br />
      <label for="city">City</label>
      <select id="city" name="city" required>
        <option value="Austin">Austin</option>
        <option value="Boston">Boston</option>
        <option value="Chicago">Chicago</option>
        <option value="Denver">Denver</option>
        <option value="Hoboken">Hoboken</option>

        <option value="Jersey City">Jersey City</option>
        <option value="New York">New York</option>

        <option value="Phoenix">Phoenix</option>
        <option value="San Francisco">San Francisco</option>
        <option value="San Jose">San Jose</option>
        <option value="Seattle">Seattle</option>

      </select>
      <br />
      <label for="state">State</label>
      <select id="state" name="state" required>
        <option value="Arizona">Arizona</option>
        <option value="California">California</option>
        <option value="Colorado">Colorado</option>
        <option value="Illinois">Illinois</option>
        <option value="Texas">Texas</option>
        <option value="Massachusetts">Massachusetts</option>
        <option value="New Jersey">New Jersey</option>
        <option value="New York">New York</option>
        <option value="Washington">Washington</option>
      </select>
      <br />

      <label for="schoolName">School Name</label>
      <select id="schoolName" name="schoolName" required>

        <option value="Stevens Institute of Technology">Stevens Institute of
          Technology</option>
        <option value="New York University">New York University</option>
        <option value="University of Texas at Austin">University of Texas at
          Austin</option>
        <option value="University of Denver">University of Denver</option>

        <option value="Arizona State University">Arizona State University</option>
        <option value="University of San Francisco">University of San Francisco</option>
        <option value="San Jose State University">San Jose State University</option>
        <option value="University of Washington">University of Washington</option>
        <option value="Not Applicable">Not Applicable</option>
      </select>

      <br />

      <label for="roomNumber">Rooms Available</label>
      <input
        name="roomNumber"
        id="roomNumber"
        type="number"
        placeholder="1"
        required
      />
      <br />
      <label for="roomarea">Room Area</label>
      <input
        name="roomarea"
        id="roomarea"
        type="number"
        placeholder="100 Sq. Ft."
        required
      />
      <br />
      <label for="petsAllowed">Pets Allowed</label>
      <input name="petsAllowed" id="petsAllowed" type="checkbox" />
      <br />
      <label for="parkingAvailable">Parking Available</label>
      <input name="parkingAvailable" id="parkingAvailable" type="checkbox" />
      <br />
      <label for="sharingAllowed">Sharing Allowed</label>
      <input name="sharingAllowed" id="sharingAllowed" type="checkbox" />
      <br />
      <label for="rent">Rent</label>
      <input name="rent" type="number" id="rent" placeholder="100$" required />
      <br />
      <label for="peoplelivingcurrently">Number of Roommates</label>
      <input
        id="peoplelivingcurrently"
        name="peoplelivingcurrently"
        type="number"
        placeholder="1"
        required
      />
      <br />
      <label for="otherdescription">Other Description</label>
      <input
        id="otherdescription"
        name="otherdescription"
        type="text"
        placeholder="Additional Information"
      />
      <br />
      <p class="userImage">Upload a picture of the room if you want</p>
      <div class="input-group mb-3" id="image_upload_option">
        <input
          multiple
          type="file"
          id="picture"
          name="postImage"
          accept=".jpg,.gif,.png,.jpeg"
        />

      </div>
      <br />

      {{#if errors}}
        <h2>{{errors}}</h2>
      {{/if}}

      {{#if result}}
        <h2>{{result}}</h2>
      {{/if}}

      <button type="submit" class="btn btn-primary">Submit</button>

    </div>
    <script>
      const input = document.querySelector('#inputGroupFile02'); // Listen for
      files selection input.addEventListener('change', (e) => { // Retrieve all
      files const files = input.files; // Check files count if (files.length >
      4) { alert(`Only 4 images are allowed to upload.`); return; } });
    </script>

    {{#if message}}
      <h2>{{message}}</h2>
    {{/if}}

  </div>
</form>

