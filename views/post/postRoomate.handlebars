<h1>Find a Roommate</h1>
<form action="/private/postRoomate" id="post-form" method="POST">
  <div class="postform">

    <div class="postform--group">
      <label>postDate</label>
      <input name="postDate" type="date" placeholder="postDate" required />
    </div>

    <div class="postform--group">
      <label>image</label>
      <input name="image" type="image" placeholder="image" />
    </div>

    <div class="postform--group">
      <label>title</label>
      <input name="title" type="text" placeholder="Enter title" required />
    </div>

    <div class="postform--group">
      <label>street</label>
      <input name="street" type="text" placeholder="Enter street" required />
    </div>

    <div class="postform--group">

      <label for="city">City</label>
      <select id="city" name="city" required>
        <option value="Austin">Austin</option>
        <option value="Boston">Boston</option>
        <option value="Chicago">Chicago</option>
        <option value="Denver">Denver</option>
        <option value="Hoboken">Hoboken</option>

        <option value="Jersey City">Jersey City</option>
        <option value="New York">New York</option>

        <option value="Phoenix">Phoenix</option>
        <option value="San Francisco">San Francisco</option>
        <option value="San Jose">San Jose</option>
        <option value="Seattle">Seattle</option>

      </select>

    </div>

    <div class="postform--group">

      <label for="state">State</label>
      <select id="state" name="state" required>
        <option value="Arizona">Arizona</option>
        <option value="California">California</option>
        <option value="Colorado">Colorado</option>
        <option value="Illinois">Illinois</option>
        <option value="Texas">Texas</option>
        <option value="Massachusetts">Massachusetts</option>
        <option value="New Jersey">New Jersey</option>
        <option value="New York">New York</option>
        <option value="Washington">Washington</option>
      </select>

    </div>

    <div class="postform--group">
      <label>Rooms Available</label>
      <input name="roomNumber" type="number" placeholder="1" required />
    </div>

    <div class="postform--group">
      <label>Room Area</label>
      <input name="roomarea" type="number" placeholder="100 Sq. Ft." required />
    </div>

    <div class="postform--group">
      <label>petsAllowed</label>
      <input name="petsAllowed" type="checkbox" />
    </div>

    <div class="postform--group">
      <label>parkingAvailable</label>
      <input name="parkingAvailable" type="checkbox" />
    </div>

    <div class="postform--group">
      <label>sharingAllowed</label>
      <input name="sharingAllowed" type="checkbox" />
    </div>

    <div class="postform--group">
      <label>Rent</label>
      <input name="rent" type="number" placeholder="100$" required />
    </div>

    <div class="postform--group">
      <label>Peoples living in currently</label>
      <input
        name="peoplelivingcurrently"
        type="number"
        placeholder="1"
        required
      />
    </div>

    <div class="postform--group">
      <label>Other Description</label>
      <input
        name="otherdescription"
        type="text"
        placeholder="otherdescription"
      />
    </div>

    <div class="postform--group">
      <label>Submit</label>
      <button type="submit" id="btn">submit</button>
    </div>

    {{#if message}}
      <h2>{{message}}</h2>
    {{/if}}

