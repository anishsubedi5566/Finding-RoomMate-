<h1 class="searchbyheader">Search by University</h1>
<br />
<form
  class="searchby-option"
  action="searchbyschoolName"
  id="schoolName_search"
  method="POST"
  onsubmit="validate_searchbyschoolName(event)"
>

  <label for="schoolName">University Name</label>
  <select id="schoolName" name="schoolName" required>
    <option value="">None</option>
    <option value="Stevens Institute of Technology">Stevens Institute of
      Technology</option>
    <option value="New York University">New York University</option>
    <option value="University of Texas at Austin">University of Texas at Austin</option>
    <option value="University of Denver">University of Denver</option>

    <option value="Arizona State University">Arizona State University</option>
    <option value="University of San Francisco">University of San Francisco</option>
    <option value="San Jose State University">San Jose State University</option>
    <option value="University of Washington">University of Washington</option>
  </select>
  <br />
  {{#if errors}}
    <h6>{{errors}}</h6>
  {{/if}}
  <button type="submit" class="btn btn-primary">Submit</button>

</form>

<div class="grid-container">
  {{#each allpost}}
    {{!-- {{#if this.field === "room"}} --}}
    {{#ifEqual this.field "room"}}

      <div class="grid-item">

        <div class="cssroom-div">
          <h1>{{this.title}} </h1>
          <label>Posted By :{{this.user}}</label>
          <label>Post Date:{{this.postDate}}</label>
          <label>City: {{this.city}} </label>
          <label>State:{{this.state}}</label>
          <label>School Name: {{this.schoolName}}</label>
          <label>Parking Available:{{this.parkingAvailable}}</label>
          <label>Pets Allowed: {{this.petsAllowed}} </label>
          <label>Sharing allowed: {{this.sharingAllowed}}</label>
          <label>Budget:$ {{this.budget}}</label>
          <label>Is a student?: {{this.student}}</label>
          <label>Other description: {{this.otherdescription}}</label>
          <br />
          <a href="http://localhost:3000/private/post/{{this._id}}">Click here
            to view this whole post!</a>
        </div>

      </div>

    {{else}}
      <div class="grid-item">

        <div class="cssroom-div">
          <h1>{{this.title}} </h1>
          <label>Posted By :{{this.user}}</label>
          <div class="images">
            <div class="photo">
              {{#each postImages}}
                <img src={{this}} alt="place" />
              {{/each}}
            </div>
          </div>
          <label>Post Date:{{this.postDate}}</label>
          <label>Street: {{this.street}}</label>
          <label>City: {{this.city}} </label>
          <label>State:{{this.state}}</label>
          <label>Number of Rooms:{{roomNumber}}</label>
          <label>Room Area: {{roomarea}} sqft</label>
          <label>Parking Available:{{this.parkingAvailable}}</label>
          <label>Pets Allowed: {{this.petsAllowed}} </label>
          <label>Sharing allowed: {{this.sharingAllowed}}</label>
          <label>Rent:$ {{this.rent}}</label>
          <p>People Living Currently: {{this.peoplelivingcurrently}}</p>
          <label>Other Description: {{this.otherdescription}}</label>
          <br />
          <a href="http://localhost:3000/private/post/{{this._id}}">Click here
            to view this whole post!</a>
        </div>

      </div>
    {{/ifEqual}}

  {{/each}}
</div>

