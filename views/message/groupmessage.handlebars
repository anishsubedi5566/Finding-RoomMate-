<div class="groupMessageCont">

  <h1>Sent Group Message</h1>
  <form action="/private/message/groupmessage" id="message-form" method="POST">
    <div class="form">
      <label for="sendTo">Usernames: </label>
      <input
        type="text"
        name="sendto"
        placeholder="Enter Multiple User Name"
        required
      />
      <label for="message">Message: </label>

      <input
        id="message"
        name="message"
        type="text"
        placeholder="Enter Message"
        required
      />
      <br />
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
  </form>

  {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
  {{else}}
    <div class="alert alert-danger" hidden role="alert">
      {{error}}
    </div>
  {{/if}}

</div>