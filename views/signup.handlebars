<main>
  <div class="signup_card">

    <h1>Sign Up</h1>
    <form
      action="/signup"
      id="signup-form"
      method="POST"
      onsubmit="validateSignUpInputs(event);"
      enctype="multipart/form-data"
    >
      <div class="form">

        <label>Username</label>

        <input
          id="username"
          name="username"
          type="text"
          placeholder="Enter username"
          spellcheck="false"
          required
        />

        <br />
        <label>Password</label>

        <input
          id="password"
          name="password"
          type="password"
          placeholder="Enter password"
          required
        />
        <br />
        <label for="securityQues">Security Question</label>

        <select id="securityQues" name="securityQues" required>
          <option value="None">None</option>
          <option value="What is your nickname?">What is your nickname?</option>
          <option value="Which is your favourite place to spend vacation?">Which
            is your favourite place to spend vacation?</option>
          <option value="Who is your first childhood friend?">Who is your first
            childhood friend?</option>
          <option value="Which is your favourite video game?">Which is your
            favourite video game?</option>

        </select>
        <br />
        <label>Answer</label>

        <input
          id="securityAns"
          name="securityAns"
          type="text"
          placeholder="Answer to the security question"
          spellcheck="false"
          required
        />
        <br />
        <label>First Name</label>

        <input
          id="firstName"
          name="firstName"
          type="text"
          placeholder="Enter your first name"
          spellcheck="false"
          required
        />
        <br />
        <label>Last Name</label>

        <input
          id="lastName"
          name="lastName"
          type="text"
          placeholder="Enter your last name"
          spellcheck="false"
          required
        />
        <br />
        <label>Email</label>

        <input
          id="email"
          name="email"
          type="email"
          placeholder="lorem@roomie.com"
          spellcheck="false"
          required
        />
        <br />
        <label for="schoolName">School Name</label>

        <select id="schoolName" name="schoolName" required>
          <option value="None">None</option>
          <option value="Stevens Institute of Technology">Stevens Institute of
            Technology</option>
          <option value="New York University">New York University</option>
          <option value="University of Texas at Austin">University of Texas at
            Austin</option>
          <option value="University of Denver">University of Denver</option>

          <option value="Arizona State University">Arizona State University</option>
          <option value="University of San Francisco">University of San
            Francisco</option>
          <option value="San Jose State University">San Jose State University</option>
          <option value="University of Washington">University of Washington</option>

        </select>

        <br />
        <label for="city">City</label>

        <select id="city" name="city" required>
          <option value="None">None</option>
          <option value="Austin">Austin</option>
          <option value="Boston">Boston</option>
          <option value="Chicago">Chicago</option>
          <option value="Denver">Denver</option>
          <option value="Hoboken">Hoboken</option>

          <option value="Jersey City">Jersey City</option>
          <option value="New York">New York</option>

          <option value="Phoenix">Phoenix</option>
          <option value="San Francisco">San Francisco</option>
          <option value="San Jose">San Jose</option>
          <option value="Seattle">Seattle</option>

        </select>

        <br />
        <label for="state">State</label>

        <select id="state" name="state" required>
          <option value="None">None</option>
          <option value="Arizona">Arizona</option>
          <option value="California">California</option>
          <option value="Colorado">Colorado</option>
          <option value="Illinois">Illinois</option>
          <option value="Texas">Texas</option>
          <option value="Massachusetts">Massachusetts</option>
          <option value="New Jersey">New Jersey</option>
          <option value="New York">New York</option>
          <option value="Washington">Washington</option>
        </select>
        <br />

        <label for="age">Age</label>

        <input
          id="age"
          name="age"
          type="number"
          placeholder="15 to 100"
          required
        />
        <br />
        <label for="gender">Gender</label>

        <select id="gender" name="gender" required>
          <option value="None">None</option>
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Non-Binary">Non-Binary</option>
          <option value="Transgender">Transgender</option>
          <option value="Agender">Agender</option>
          <option value="Pangender">Pangender</option>
          <option value="Genderqueer">Genderqueer</option>

        </select>
        <br />

        <label for="homeCountry">Native Country</label>

        <select id="homeCountry" name="homeCountry" required>
          <option value="None">None</option>
          <option value="United States of America">United States of America</option>
          <option value="Brazil">Brazil</option>
          <option value="China">China</option>
          <option value="France">France</option>
          <option value="India">India</option>
          <option value="Israel">Israel</option>
          <option value="Mexico">Mexico</option>
          <option value="Nepal">Nepal</option>
          <option value="Philippines">Philippines</option>
          <option value="Russia">Russia</option>
          <option value="Spain">Spain</option>
          <option value="Thailand">Thailand</option>
          <option value="United Arab Emirates">United Arab Emirates</option>
          <option value="United Kingdom">United Kingdom</option>

        </select>
        <br />

        <p class="userImage">Upload a profile picture for your profile if you
          want</p>
        <div class="input-group mb-3" id="image_upload_option">
          <input
            type="file"
            class="form-control"
            id="inputGroupFile02"
            id="picture"
            name="picture"
            accept=".jpg,.gif,.png,.jpeg"
          />

        </div>
        <br />
        {{!-- {{#if error}}
      <h2>{{error}}</h2>
    {{/if}} --}}
        {{#if error}}
          <div class="alert alert-danger" role="alert">
            {{error}}
          </div>
        {{else}}
          <div class="alert alert-danger" hidden role="alert">
            {{error}}
          </div>
        {{/if}}

        {{! <label>Submit</label> }}
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </div>
    </form>

    <a id="Home" class="link-primary" href="/login">Already have an account?
      Click here to log-in</a>
  </div>
</main>
<script src="/public/js/signup.js"></script>